<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/backnewsfeed">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:textColor="@color/darkelementsnewsfeed"
            android:text="Connect">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LLmainPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"

        android:orientation="vertical"
        android:layout_gravity="center"
        >
    <LinearLayout
        android:id="@+id/LLEnterorReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:gravity="center"
                android:textSize="10dp"
                android:textColor="@color/red"
                android:text="">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/toRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="right"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:text="Регистрация">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@drawable/roundcornertrans"
        android:outlineSpotShadowColor="@color/buttonnewsfeed"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="right"
            android:textSize="25dp"
            android:textColor="@color/activepurple"
            android:text="Вход">
        </TextView>
        <EditText
            android:id="@+id/ETlogin"
            android:layout_below="@+id/LLEnterorReg"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:hint="Логин"
            android:textColor="@color/white"

            android:textColorHint="@color/transpwhite"
            android:singleLine="true">
        </EditText>
        <EditText
            android:id="@+id/ETpassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:hint="Пароль"
            android:textColorHint="@color/transpwhite"
            android:inputType="textPassword"
            android:singleLine="true">
        </EditText>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LLbutEnter"
        android:layout_below="@+id/LLmainPanel"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/butEnter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textColor="@color/buttonnewsfeed"
            android:text="Войти">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/butauththrouthnws"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:text="Войти через Соцсети">
        </TextView>
    </LinearLayout>
</RelativeLayout>